#Hadoop MapReduce

1. After launching the Instance from API, 
sudo nano /etc/hosts
172.31.27.188 master
172.31.28.147 slave1
172.31.29.250 slave2

sudo su - hadoop

ping slave1
ping slave2

hdfs namenode -format
start-all.sh

hadoop fs -mkdir /user
hadoop fs -mkdir /user/hadoop

cd IST3134/
unzip wordcount.zip
mkdir ~/workspace
cp -r wordcount/ ~/workspace/

cd ~
wget https://basketbucketbelle.s3.amazonaws.com/precovid_reviews_subset_55.csv

hadoop fs -put precovid_reviews_subset_55.csv /user/hadoop/

cd ~/workspace/wordcount/src

ls stubs
hadoop classpath
javac -classpath `hadoop classpath` stubs/*.java
jar cvf wc.jar stubs/*.class

hadoop jar wc.jar stubs.WordCount precovid_reviews_subset_55.csv wordcounts1
